<h1>Risultati della ricerca per "<%= @search_query %>"</h1>
<!-- La tua tabella dei risultati -->

<% if @games && @games.any? %>
  <table>
    <thead>
      <tr>
        <th>Titolo</th>
        <th>ID</th>
        <th>Dettagli</th>
      </tr>
    </thead>
    <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game["title"] %></td>
        <td><%= game["plain"] %></td>
        <td><a href="<%= details_game_path(plain: game["plain"]) %>">Dettagli</a></td>
      </tr>
    <% end %>    
    </tbody>
  </table>
<% else %>
  <p>Nessun gioco trovato</p>
<% end %>
