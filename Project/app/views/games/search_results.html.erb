<pre style="display:none;"><%= @games.inspect %></pre>

<% if @games && @games.any? %>
  <table>
    <thead>
      <tr>
        <th>Titolo</th>
        <th>Data di rilascio</th>
        <th>Recensioni</th>
        <th>Prezzo</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><a href="<%= game["url"] %>"><img src="<%= game["imgUrl"] %>" alt="<%= game["title"] %>" width="60"> <%= game["title"] %></a></td>
          <td><%= game["released"] %></td>
          <td><%= game["reviewSummary"].present? ? game["reviewSummary"].html_safe : "N/A" %></td> <!-- Verifica qui -->
          <td><%= game["price"].present? ? game["price"] : "N/A" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nessun gioco trovato</p>
<% end %>
