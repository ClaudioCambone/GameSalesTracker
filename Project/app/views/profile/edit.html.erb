<!-- app/views/profile/edit.html.erb -->

<h2>Edit Your Profile</h2>

<%= form_for @user, url: profile_profile_page_path, method: :patch do |f| %>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Profile' %>
  </div>
<% end %>


